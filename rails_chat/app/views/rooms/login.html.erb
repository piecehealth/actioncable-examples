<div class="columns">
  <div class="column is-three-fifths is-offset-one-fifth box">
    <%= form_with url: create_session_path, id: "chat-form", data: { "room-id": "fake" } do |form| %>
      <div class="field">
        <%= form.label :name, "Name", class: "label" %>
        <div class="control">
          <%= form.text_field :name, class: "input" %>
        </div>
      </div>
      <div class="field is-grouped">
        <div class="control">
          <%= form.submit "Sign in", class: "button is-dark"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
